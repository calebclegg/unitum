{
  "name": "unitum",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/jaybarnes33/unitum.git",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "heroku-prebuild": "NPM_CONFIG_PRODUCTION=false npm install --only=dev",
    "install:client": "cd frontend && yarn",
    "install:server": "cd backend && yarn",
    "preinstall": "concurrently \"yarn install:client\" \"yarn install:server\"",
    "client": "cd frontend && yarn start",
    "server": "cd backend && yarn dev",
    "start": "concurrently \"yarn client\" \"yarn server\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  }
}
