{
  "name": "unitum",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/jaybarnes33/unitum.git",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "install:client": "cd frontend && yarn",
    "install:server": "cd backend && yarn",
    "client": "cd frontend && yarn start",
    "server": "cd backend && yarn dev",
    "dev": "concurrently \"yarn client\" \"yarn server\"",
    "start": "yarn --cwd backend start ",
    "build": "yarn --cwd frontend build  && yarn --cwd backend build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn install:client &&  yarn install:server && npm run build"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  }
}
